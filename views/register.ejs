<div>

    <% if (typeof errors != 'undefined') { %>
    <% errors.forEach(function(err) { %>
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline"><%= err.msg %></span>
    </div>
    <% }); %>
    <% } %>
    <% if (success_msg != '') { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline"><%= success_msg %></span>
    </div>
    <% } %>
    <% if (error_msg != '') { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline"><%= error_msg %></span>
    </div>
    <% } %>

    <div>
        <section>
            <h2><span>Sign up</span> with email and phone number</h2>
        </section>
        <section>
            <form action="/users/register" method="POST">
                <input type="email" name="email" id="email" placeholder="Email"
                    value="<%= typeof email != 'undefined' ? email : '' %>">
                <input type="tel" name="phone" id="phone" placeholder="Phone Number"
                    value="<%= typeof phone != 'undefined' ? phone : '' %>">
                <input type="password" name="password" id="password" placeholder="Password"
                    value="<%= typeof password != 'undefined' ? password : '' %>">
                <input type="password" name="passwordConfirm" id="passwordConfirm" placeholder="Confirm Password"
                    value="<%= typeof passwordConfirm != 'undefined' ? passwordConfirm : '' %>">
                <button type="submit">Sign Up</button>
            </form>
        </section>
    </div>
    <small>
        <a href="/users/login">Already have an account? Sign In</a>
    </small>
</div>